<%- include('layouts/header') %>

<div class="confirmation-form-container">
    <% if (typeof token !== 'undefined') { %>
    <form action="/user/confirmation/<%= token %>" method="POST">
        <h1 class="h3 mb-3 font-weight-normal text-center">Confirm your email</h1>
        <%- messages('partials/messages', locals) %>
        <div class="form-group input-group-sm mb-3">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email"
                placeholder="Please enter your email again">
        </div>
        <button type="submit" class="btn btn-dark btn-block">Verify</button>
    </form>
    <% } else { %>
    <div>
        <%- messages('partials/messages', locals) %>
        <h3 class="h3 mb-3 font-weight-normal text-center">Didn't recieve an email?</h3>
        <a href="/user/resend/confirmation" class="btn btn-danger btn-block">Resend</a>
    </div>
    <% } %>

</div>

<div class="hr">
    <hr>
</div>

<%- include('layouts/footer') %>